<% content_for :page_title, 'Countries' -%>
<% content_for :page_description, 'View and search countries here. Use the search bar above to search by name, ISO codes, capital and more!' -%>
<%= content_for :search do %>
  <%= form_with url: countries_path, method: :get, class: 'relative flex flex-1' do |form| %>
    <%= form.label :search_field, 'Search Countries', class: 'sr-only' %>
    <svg class="pointer-events-none absolute inset-y-0 left-0 h-full w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd"/>
    </svg>
    <%= form.text_field :search,
                        class: "block h-full w-full border-0 py-0 pl-8 pr-0 text-gray-900 placeholder:text-gray-400 ring-transparent sm:text-sm",
                        placeholder: 'Search Countries...',
                        value: params[:search],
                        type: 'search',
                        name: 'search' %>
  <% end %>
<% end %>

<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-300">
        <thead>
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">
            Country
          </th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            ISO 2
          </th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            ISO 3
          </th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 hidden lg:block">
            Capital
          </th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            Airports
          </th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            Operators
          </th>
          <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
            <span class="sr-only">Edit</span>
          </th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white" id='list'>
        <%= render partial: 'country', collection: @countries %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @pagy.pages > 1 %>
  <div data-controller="infinite-scroll"
       data-infinite-scroll-container-target-value="list"
       data-infinite-scroll-url-value="<%= countries_path %>">
  </div>
<% end %>
<div class="relative">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-gray-300"></div>
  </div>
  <div class="relative flex justify-center">
    <span class="bg-white px-2 text-sm text-gray-500">EOF</span>
  </div>
</div>
<div class="w-full mt-5 text-center">
  <span class="text-gradient">
    Welp, we've run out of countries to show you.
    <span class="font-bold text-shadow-lg shadow-fuchsia-300">Maybe you can help us add some more?</span>
  </span>
</div>