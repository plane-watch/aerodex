<% content_for :page_title, 'Dashboard' -%>
<% content_for :page_description, 'Welcome to Aerodex - your aviation data dashboard. View counts, import status, and pending approvals.' -%>

<!-- Model Counts Grid -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- Aircraft Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-purple-100 hover:border-purple-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-plane text-purple-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Aircraft</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@aircraft_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to aircraft_index_path, class: "text-sm text-purple-600 hover:text-purple-800" do %>
        View all aircraft
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>

  <!-- Aircraft Types Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-indigo-100 hover:border-indigo-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-indigo-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-rectangle-list text-indigo-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Aircraft Types</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@aircraft_types_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to aircraft_types_path, class: "text-sm text-indigo-600 hover:text-indigo-800" do %>
        View aircraft types
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>

  <!-- Manufacturers Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-violet-100 hover:border-violet-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-violet-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-wrench text-violet-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Manufacturers</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@manufacturers_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to manufacturers_path, class: "text-sm text-violet-600 hover:text-violet-800" do %>
        View manufacturers
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>

  <!-- Operators Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-fuchsia-100 hover:border-fuchsia-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-fuchsia-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-building-user text-fuchsia-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Operators</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@operators_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to operators_path, class: "text-sm text-fuchsia-600 hover:text-fuchsia-800" do %>
        View operators
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>

  <!-- Airports Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-blue-100 hover:border-blue-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-road-bridge text-blue-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Airports</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@airports_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to airports_path, class: "text-sm text-blue-600 hover:text-blue-800" do %>
        View airports
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>

  <!-- Countries Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-green-100 hover:border-green-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-flag text-green-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Countries</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@countries_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to countries_path, class: "text-sm text-green-600 hover:text-green-800" do %>
        View countries
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>

  <!-- Routes Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg border-2 border-orange-100 hover:border-orange-300 transition-colors">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="size-12 bg-orange-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-route text-orange-600 text-xl"></i>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Routes</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@routes_count) %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to routes_path, class: "text-sm text-orange-600 hover:text-orange-800" do %>
        View routes
        <span aria-hidden="true"> &rarr;</span>
      <% end %>
    </div>
  </div>
</div>

<!-- Status Panels Grid -->
<div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
  <!-- Import Jobs Status Panel -->
  <div class="bg-white shadow rounded-lg relative">
    <div class="absolute top-2 right-2 z-10">
      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-600 border border-gray-300">
        <i class="fa-solid fa-flask text-xs mr-1"></i>
        Prototype
      </span>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Import Jobs</h3>
        <div class="flex items-center">
          <i class="fa-solid fa-download text-gray-400"></i>
        </div>
      </div>
      <div class="space-y-3">
        <!-- Mock Import Job 1 -->
        <div class="flex items-center justify-between py-2 border-b border-gray-100">
          <div class="flex items-center space-x-3">
            <div class="size-2 bg-green-400 rounded-full"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Aircraft Registry Update</p>
              <p class="text-sm text-gray-500">Completed 2 hours ago</p>
            </div>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Success
          </span>
        </div>

        <!-- Mock Import Job 2 -->
        <div class="flex items-center justify-between py-2 border-b border-gray-100">
          <div class="flex items-center space-x-3">
            <div class="size-2 bg-yellow-400 rounded-full animate-pulse"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Airport Data Sync</p>
              <p class="text-sm text-gray-500">Started 15 minutes ago</p>
            </div>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            Running
          </span>
        </div>

        <!-- Mock Import Job 3 -->
        <div class="flex items-center justify-between py-2 border-b border-gray-100">
          <div class="flex items-center space-x-3">
            <div class="size-2 bg-green-400 rounded-full"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Operator Callsigns</p>
              <p class="text-sm text-gray-500">Completed yesterday</p>
            </div>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Success
          </span>
        </div>

        <!-- Mock Import Job 4 -->
        <div class="flex items-center justify-between py-2">
          <div class="flex items-center space-x-3">
            <div class="size-2 bg-red-400 rounded-full"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Route Network Update</p>
              <p class="text-sm text-gray-500">Failed 3 days ago</p>
            </div>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            Failed
          </span>
        </div>
      </div>
      <div class="mt-4">
        <a href="#" class="text-sm text-purple-600 hover:text-purple-800 font-medium">
          View all import jobs
          <span aria-hidden="true"> &rarr;</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Pending Approvals Panel -->
  <div class="bg-white shadow rounded-lg relative">
    <div class="absolute top-2 right-2 z-10">
      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-600 border border-gray-300">
        <i class="fa-solid fa-flask text-xs mr-1"></i>
        Prototype
      </span>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Pending Approvals</h3>
        <div class="flex items-center">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
            3 pending
          </span>
        </div>
      </div>
      <div class="space-y-3">
        <!-- Mock Pending Approval 1 -->
        <div class="flex items-start justify-between py-2 border-b border-gray-100">
          <div class="flex items-start space-x-3">
            <div class="size-2 bg-orange-400 rounded-full mt-2"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Aircraft Registration Update</p>
              <p class="text-sm text-gray-500">G-ABCD → G-EFGH</p>
              <p class="text-xs text-gray-400">Submitted by user@example.com</p>
            </div>
          </div>
          <div class="flex space-x-1">
            <button class="inline-flex items-center p-1 border border-transparent rounded text-xs font-medium text-green-700 bg-green-100 hover:bg-green-200">
              <i class="fa-solid fa-check text-xs"></i>
            </button>
            <button class="inline-flex items-center p-1 border border-transparent rounded text-xs font-medium text-red-700 bg-red-100 hover:bg-red-200">
              <i class="fa-solid fa-times text-xs"></i>
            </button>
          </div>
        </div>

        <!-- Mock Pending Approval 2 -->
        <div class="flex items-start justify-between py-2 border-b border-gray-100">
          <div class="flex items-start space-x-3">
            <div class="size-2 bg-orange-400 rounded-full mt-2"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">New Operator Addition</p>
              <p class="text-sm text-gray-500">AeroTest Airlines (TST)</p>
              <p class="text-xs text-gray-400">Submitted by contributor@aerodex.org</p>
            </div>
          </div>
          <div class="flex space-x-1">
            <button class="inline-flex items-center p-1 border border-transparent rounded text-xs font-medium text-green-700 bg-green-100 hover:bg-green-200">
              <i class="fa-solid fa-check text-xs"></i>
            </button>
            <button class="inline-flex items-center p-1 border border-transparent rounded text-xs font-medium text-red-700 bg-red-100 hover:bg-red-200">
              <i class="fa-solid fa-times text-xs"></i>
            </button>
          </div>
        </div>

        <!-- Mock Pending Approval 3 -->
        <div class="flex items-start justify-between py-2">
          <div class="flex items-start space-x-3">
            <div class="size-2 bg-orange-400 rounded-full mt-2"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Aircraft Type Correction</p>
              <p class="text-sm text-gray-500">Boeing 737-800 → Boeing 737-8 MAX</p>
              <p class="text-xs text-gray-400">Submitted by expert@aviation.com</p>
            </div>
          </div>
          <div class="flex space-x-1">
            <button class="inline-flex items-center p-1 border border-transparent rounded text-xs font-medium text-green-700 bg-green-100 hover:bg-green-200">
              <i class="fa-solid fa-check text-xs"></i>
            </button>
            <button class="inline-flex items-center p-1 border border-transparent rounded text-xs font-medium text-red-700 bg-red-100 hover:bg-red-200">
              <i class="fa-solid fa-times text-xs"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <a href="#" class="text-sm text-purple-600 hover:text-purple-800 font-medium">
          View all pending approvals
          <span aria-hidden="true"> &rarr;</span>
        </a>
      </div>
    </div>
  </div>
</div>